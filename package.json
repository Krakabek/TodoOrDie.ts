{
  "name": "todoordie.ts",
  "version": "1.0.0",
  "description": "write TODOs that ensure you actually do them",
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krakabek/TodoOrDie.ts.git"
  },
  "author": "Danylo Radkovskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Krakabek/TodoOrDie.ts/issues"
  },
  "homepage": "https://github.com/Krakabek/TodoOrDie.ts#readme",
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  }
}
